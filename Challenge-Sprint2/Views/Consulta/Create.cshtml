@model OdontoGendaC.Models.Consulta

<div class="container mt-5">
    <h1 class="text-center mb-4">Agendar Consulta</h1>

    <form method="post" action="/Consulta/Create">
        <div class="form-group">
            <label for="NomePaciente">Nome do Paciente</label>
            <input type="text" class="form-control" asp-for="NomePaciente" placeholder="Digite o nome do paciente" />
        </div>
        <div class="form-group">
            <label for="Dentista">Nome do Dentista</label>
            <input type="text" class="form-control" asp-for="Dentista" placeholder="Digite o nome do dentista" />
        </div>
        <div class="form-group">
            <label for="DataConsulta">Data da Consulta</label>
            <input type="date" class="form-control" asp-for="DataConsulta" />
        </div>
        <div class="form-group">
            <label for="Horario">Horário</label>
            <input type="time" class="form-control" asp-for="Horario" />
        </div>
        <div class="form-group">
            <label for="Observacoes">Observações</label>
            <textarea class="form-control" asp-for="Observacoes" rows="3" placeholder="Observações adicionais"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Salvar Consulta</button>
    </form>
</div>
